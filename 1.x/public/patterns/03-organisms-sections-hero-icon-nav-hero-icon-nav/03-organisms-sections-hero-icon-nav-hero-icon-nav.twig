{% set classes = [
  'jcc-hero-icon-nav',
  hero_icon_nav.style ?: 'jcc-hero-icon-nav-style--default',
]|merge(hero_icon_nav.classes|default([''])) %}

<div class="{{ classes|join(' ')|trim }}">
  {% if hero_icon_nav.hero_banner %}
    {% include '@molecules/blocks/hero/hero.twig' with { hero: hero_icon_nav.hero_banner } %}
  {% endif %}
  {% set contextual = hero_icon_nav.contextual_links ? 'contextual-region' : '' %}
  <div class="jcc-hero-icon-nav__nav grid-row {{ contextual }}">
    <div class="jcc-hero-icon-nav__block jcc-hero-icon-nav__block--cards desktop:grid-col-6">
      {{ hero_icon_nav.contextual_links }}
      {% include '@organisms/sections/card-section-base/card-section-base.twig' with {
        card_section: {
          theme: hero_icon_nav.card_section.theme,
          max: hero_icon_nav.card_section.max,
          cards: hero_icon_nav.card_section.cards,
        }
      } %}
    </div>
    <div class="jcc-hero-icon-nav__block jcc-hero-icon-nav__block--image desktop:grid-col-6">
      {% include '@atoms/image/image.twig' with { image: hero_icon_nav.media } %}
    </div>
  </div>
</div>
