<footer class="jcc-footer">
  <div class="jcc-footer__container">
    <div class="jcc-footer__row">
      {% if footer.layout_variant %}
        <div class="jcc-footer__copyright">
          &copy;
          {{ "now"|date("Y") }}
          {{ footer.copyright_owner }}
        </div>
        <div class="jcc-footer__menu">
          {% if patternlab %}
            {% include '@molecules/navigation/inline-nav/inline-nav.twig' %}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      {% else %}
        <div class="jcc-footer__menu">
          {% if patternlab %}
            {% include '@molecules/navigation/inline-nav/inline-nav.twig' %}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
        <div class="jcc-footer__copyright">
          &copy;
          {{ "now"|date("Y") }}
          {{ footer.copyright_owner }}
        </div>
      {% endif %}
    </div>
  </div>
</footer>
