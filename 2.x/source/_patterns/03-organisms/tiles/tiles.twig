{#
/**
 * Available variables:
 * - tiles - primary variable
 *   - heading: the heading (title & lead)
 *   - items: array of tile items
 *   - classes: array of classes to add to component
 */
#}

{% set classes = [
  'jcc-tiles',
]|merge(tiles.classes|default([])) %}

{% set content %}
  <ul class="{{ classes|join(' ')|trim }}">
    {% for item in tiles.items %}
      <li class="jcc-tiles__tile">
        {% include "@molecules/tile/tile.twig" with {
          tile: item
        } %}
      </li>
    {% endfor %}
  </ul>
{% endset %}

{% include "@molecules/section/section.twig" with {
  section: {
    heading: tiles.heading,
    content: content,
  }
} %}
