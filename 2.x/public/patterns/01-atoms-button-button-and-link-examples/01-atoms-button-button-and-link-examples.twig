<div class="sg-h5">Default</div>
<div>
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Default",
      aria_label: "Test label",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Hover",
      state: "hover",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Active",
      state: "active",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Focus",
      classes: ["usa-focus"],
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Disabled",
      state: "disabled",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "button",
      text: "Unstyled button",
      style: "unstyled",
    }
  } %}
</div>

<div class="sg-h5">Secondary</div>
<div>
  <button class="jcc-button--secondary">Default</button>
  <button class="jcc-button--secondary jcc-button--hover">Hover</button>
  <button class="jcc-button--secondary jcc-button--active">Active</button>
  <button class="jcc-button--secondary usa-focus">Focus</button>
  <button class="jcc-button--secondary jcc-button--disabled" disabled>Disabled</button>
  <button class="jcc-button--secondary jcc-button--unstyled">Unstyled button</button>
</div>

<div class="sg-h5">Outline</div>
<div>
  <button class="jcc-button--outline">Default</button>
  <button class="jcc-button--outline jcc-button--hover">Hover</button>
  <button class="jcc-button--outline jcc-button--active">Active</button>
  <button class="jcc-button--outline usa-focus">Focus</button>
  <button class="jcc-button--outline jcc-button--disabled" disabled>Disabled</button>
  <button class="jcc-button--outline jcc-button--unstyled">Unstyled button</button>
</div>

<div class="sg-h5">Default inverse</div>
<div class="bg-primary padding-2" style="max-width: fit-content">
  <button class="jcc-button--inverse">Default</button>
  <button class="jcc-button--inverse jcc-button--hover">Hover</button>
  <button class="jcc-button--inverse jcc-button--active">Active</button>
  <button class="jcc-button--inverse usa-focus">Focus</button>
  <button class="jcc-button--inverse jcc-button--disabled" disabled>Disabled</button>
  <button class="jcc-button--inverse jcc-button--unstyled">Unstyled button</button>
</div>

<div class="sg-h5">Default (link)</div>
<div>
  <a href="#" class="jcc-button--primary">Default</a>
  <a href="#" class="jcc-button--primary jcc-button--hover">Hover</a>
  <a href="#" class="jcc-button--primary jcc-button--active">Active</a>
  <a href="#" class="jcc-button--primary usa-focus">Focus</a>
  {# <a> links don't really "disable" #}
  {# <a href="#" class="jcc-button--primary jcc-button--disabled" disabled>Disabled</a> #}
  <a href="#" class="jcc-button--primary jcc-button--unstyled">Unstyled button</a>
</div>

<div class="sg-h5">External (link)</div>
<div>
  {% include "button.twig" with {
    button: {
      type: "link",
      text: "Default",
      is_external: true,
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "link",
      text: "Hover",
      is_external: true,
      state: "hover",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "link",
      text: "Active",
      is_external: true,
      state: "active",
    }
  } %}
  {% include "button.twig" with {
    button: {
      type: "link",
      text: "Focus",
      is_external: true,
      classes: ["usa-focus"],
    }
  } %}
  {# <a> links don't really "disable" #}
  {# {% include "button.twig" with {
    button: {
      type: "link",
      text: "Disabled",
      is_external: true,
      state: "disabled",
    }
  } %} #}
  {% include "button.twig" with {
    button: {
      type: "link",
      text: "Unstyled button",
      is_external: true,
      style: "unstyled",
    }
  } %}
</div>

