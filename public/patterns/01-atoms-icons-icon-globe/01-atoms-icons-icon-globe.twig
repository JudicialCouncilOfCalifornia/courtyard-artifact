{% if icon.name %}
  {% spaceless %}
    <svg class="icon icon-{{ icon.name }} {{ icon.width|default('') }} {{ icon.height|default('') }}" role="img"
      {%- if icon.title %} title="{{ icon.title }}"{% endif -%}
      {%- if decorative %} aria-hidden="true"{% endif -%}">
      <use class="{{ icon.color|default('') }}" xlink:href="{{ icon.file }}#i-{{ icon.name }}"></use>
    </svg>
  {% endspaceless %}
{% endif %}