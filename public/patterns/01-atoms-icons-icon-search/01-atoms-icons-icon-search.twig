{% if icon.name %}
  {% spaceless %}
    <svg class="icon icon-{{ icon.name }}" role="img"
      {%- if icon.title %} title="{{ icon.title }}"{% endif -%}
      {%- if decorative %} aria-hidden="true"{% endif -%}>
      <use xlink:href="{{ icon.file }}#i-{{ icon.name }}"></use>
    </svg>
  {% endspaceless %}
{% endif %}
